@model ProjetoUsuario.Models.Dtos.UsuarioDto
@section Scripts
    {
    <script src="~/js/Usuario/Util.js"></script>
    <script src="~/js/Usuario/SalvarUsuario.js" asp-append-version="true"></script>
}

<div class="row">
    <div class="col">
        <h2 class="display-4">@ViewData["Title"]</h2>
    </div>
</div>

<div class="row mt-4 mb-4">
    <div class="col">
        <a class="btn btn-primary" asp-area="Painel" asp-controller="Usuario" asp-action="Consultar"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
        <a id="btn-salvar" class="btn btn-primary" asp-area="Painel" asp-controller="Usuario" asp-action="Salvar"><i class="fas fa-plus-circle"></i> Salvar</a>
    </div>
</div>

<div class="row">
    <div class="col">
        <form id="frm-usuario" name="fregistro">
            @Html.HiddenFor(model => model.IdUsuario)  
            <fieldset>

                <div class="form-group">
                    <input asp-for="Nome" id="text" placeholder="Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Login" id="text" placeholder="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Email" id="text" name="email" placeholder="E-mail" onblur="validacaoEmail(fregistro.email)" maxlength="60" size='65' class="form-control" />
                    <div id="msgemail"></div>
                </div>
                <div class="form-group">
                    <input asp-for="Telefone" id="text" placeholder="Telefone" name="Telefone" onkeypress="mask(this, mphone);" onblur="mask(this, mphone);" class="form-control" />
                </div>

                @if (Model.IdUsuario == 0)
                {                       
                    <div class="form-group">
                        <input asp-for="Senha" id="text" placeholder="Senha" name="Senha" type="password" class="form-control" />
                    </div>          
                }
            </fieldset>
        </form>
    </div>
</div>